@page "{userId?}"
@model XE908.Pages.Admin.UserManagement.IndexModel
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>User Management</h1>

@if (Model.Client != null)
{
    <table class="table table-hovered table-bordered">
        <tr>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>EMail Address</th>
            <th>Batch ID</th>
            <th></th>
        </tr>
        <tr>
            <form method="post">
                <input type="hidden" name="clientId" value="@Model.Client.Id" />
                <td><input type="text" asp-for="Input.UserName"></td>
                <td><input type="text" asp-for="Input.FirstName" disabled="disabled"></td>
                <td><input type="text" asp-for="Input.LastName" disabled="disabled"></td>
                <td><input type="text" asp-for="Input.EMail"></td>
                <td><input type="text" asp-for="Input.RfidBatch"></td>
                <td><button type="submit" class="btn btn-primary">Save</button></td>
            </form>
        </tr>
    </table>
}
@if (Model.Client == null)
{
    <h1>No Client Selected</h1>
}


