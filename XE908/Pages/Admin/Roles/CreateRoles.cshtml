@page
@model XE908.Pages.Admin.Roles.CreateRolesModel
@{
    ViewData["Title"] = "CreateRoles";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>CreateRoles</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="Input.RoleName" class="form-control" autocomplete="" aria-required="true" />
        <label asp-for="Input.RoleName" class="form-label"></label>
        <span asp-validation-for="Input.RoleName" class="text-danger"></span>
    </div>
    <div>
        <button id="role-submit" type="submit" class="w-100 btn btn-lg btn-primary">Create Role</button>
    </div>
</form>